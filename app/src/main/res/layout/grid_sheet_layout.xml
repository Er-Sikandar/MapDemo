<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
     app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Grid Details"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_AreaSuitability"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Area Suitability: Unknown Suitability"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_instruction"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Instruction: There is a Check In button present on the bottom of the screen. If the user wants to select or reject the grid, he is present in, user has to click this button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_distance"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Diastance from your location: 00 km"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_durationToReach"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Duration to reach: 00 minute"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_coordinates"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Coordinates: 0.0,0.0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/tv_navigate"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/corner_radius_border_gray"
                android:layout_marginEnd="5dp"
                android:text="Navigate"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/corner_radius_border_gray"
                android:layout_marginStart="5dp"
                android:id="@+id/tv_cancel"
                android:layout_weight="1"
                android:text="Cancel"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>